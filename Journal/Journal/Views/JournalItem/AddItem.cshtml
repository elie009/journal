@model Journal.Models.Vouchers

@{
    ViewBag.Title = "AddItem";
}


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">


        <div class="modal-content bg-secondary rounded h-100 p-4">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="requires-validation" novalidate>
                    <div class="mb-3">
                        <label for="journalSign" class="form-label">Sign</label>
                        <select class="form-select mb-3" id="journalSign" required>
                            <option value="">Please select sign</option>
                            <option value="debit">Debit</option>
                            <option value="credit">Credit</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="journalType" class="form-label">Type</label>
                        <select class="form-select mb-3"  id="journalType" required>
                            <option value="">Please select type</option>
                            <option value="account">Account</option>
                            <option value="supplier">Supplier</option>
                            <option value="customer">Customer</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="journalAccount" class="form-label">Account</label>
                        <input type="text" class="form-control" id="journalAccount" required>
                    </div>
                    <div class="mb-3">
                        <label for="journalRefType" class="form-label">Reference type</label>
                        <select class="form-select mb-3" id="journalRefType" required>
                            <option value="">Please select ref. type</option>
                            <option value="against purchase">Against Purchase</option>
                            <option value="against credit note">Against Credit Note</option>
                            <option value="as advance">As Advance</option>
                            <option value="as on account">As On Account</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="journalRefNo" class="form-label">Reference No.</label>
                        <input type="text" class="form-control" id="journalRefNo" required>
                    </div>
                    <div class="mb-3">
                        <label for="journalAmount" class="form-label">Amount</label>
                        <input type="text" class="form-control" id="journalAmount" required>
                    </div>
                    <div class="mb-3">
                        <label for="journalCostCenter" class="form-label">Cost Center</label>
                        <input type="text" class="form-control" id="journalCostCenter" required>
                    </div>
                    <div class="mb-3">
                        <label for="journalNarration" class="form-label">Narration</label>
                        <div class="form-floating">
                            <textarea class="form-control" placeholder="Leave a comment here"
                                      id="journalNarration" style="height: 150px;" required></textarea>
                            <label for="floatingTextarea">Comments</label>
                        </div>
                    </div>



                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" id="submitDetails" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">

        <div class="col-sm-12 col-xl-4">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Basic Form</h6>
                <form>

                    <div class="mb-3">
                        <label for="journalVoucher" class="form-label">Voucher</label>
                        <select class="form-select mb-3" aria-label="Default select voucher">
                            <option selected>Please select voucher</option>
                            @foreach (var item in Model.voucher)
                            {
                                <option value=@Html.DisplayFor(modelItem => item.Code)>@Html.DisplayFor(modelItem => item.Name)</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Email address</label>
                        <input type="date" class="form-control" id="journalDate"
                               aria-describedby="emailHelp">
                    </div>

                    <div class="mb-3">
                        <label for="journalPayee" class="form-label">Payee</label>
                        <input type="text" class="form-control" id="journalPayee">
                    </div>

                    <div class="mb-3">
                        <button type="button" class="btn btn-info rounded-pill m-2" data-bs-toggle="modal" data-bs-target="#exampleModal">Add Journal Details</button>
                    </div>

                    <button type="submit" class="btn btn-primary">Sign in</button>
                </form>
            </div>
        </div>

        <div class="col-sm-12 col-xl-8">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Hoverable Table</h6>
                <table id="lineTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Sign</th>
                            <th scope="col">Type</th>
                            <th scope="col">Ref. Type</th>
                            <th scope="col">Ref. No.</th>
                            <th scope="col">Cost Center</th>
                            <th scope="col">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                      
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>


@Scripts.Render("~/bundles/script/journal")